@model IEnumerable<ProjetoFinanceiro.Web.Models.ClienteViewModel>

@{
    ViewData["Title"] = "Customer Listing";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-3">
        <a asp-action="Create" class="btn btn-primary" role="button">Create New</a>
    </div>
    @if(TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["SuccessMessage"]
        </div>
    }

    @if(TempData["ErroMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["ErroMessage"]
        </div>
    }
    <table class="table table-striped table-hover" id="table-client">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(model => model.ClientId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cpf)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-primary">Edit</a>
                        <a asp-action="Get" asp-route-id="@item.ClientId" class="btn btn-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ClientId" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
